{
  "name": "kafclaw-desktop",
  "version": "2.6.3",
  "description": "KafClaw Desktop - AI Assistant with three operation modes",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "dev:electron": "sleep 3 && VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "start": "npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:win": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "pinia": "^2.1.0",
    "vue": "^3.4.0",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.4",
    "concurrently": "^8.2.0",
    "electron": "^35.7.5",
    "electron-builder": "^26.7.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=24.9.0",
    "npm": ">=11.6.0"
  },
  "volta": {
    "node": "24.9.0",
    "npm": "11.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kamir/KafClaw.git"
  },
  "author": {
    "name": "kamir",
    "email": "kamir@users.noreply.github.com"
  },
  "license": "MIT"
}
